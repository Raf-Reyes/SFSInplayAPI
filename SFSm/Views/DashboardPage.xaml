<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SFSm.Views.DashboardPage"
             Title="">

    <Grid VerticalOptions="CenterAndExpand"
          HorizontalOptions="CenterAndExpand">

        <VerticalStackLayout Spacing="5" HorizontalOptions="Center" VerticalOptions="Center">

            <Image Source="aircon.png" 
                   HeightRequest="150" 
                   WidthRequest="150"
                   HorizontalOptions="Center" />

            <StackLayout Spacing="0" HorizontalOptions="Center">
                <Label Text="Welcome SFS Inplay" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="Black"/>
                <Label Text="(Main Office)" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="Black"/>
            </StackLayout>
            

        </VerticalStackLayout>

    </Grid>
    
</ContentPage>